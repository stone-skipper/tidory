style.
  article {
    width: 96vw;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 31.5vw 31.5vw 31.5vw;
    grid-gap: 0.75vw;
  }

  .article-list-wrapper{
    width: 31.5vw;
    height: 400px;
    background: blue;
    color: white;
    overflow: hidden;
  }


  .article-list-info p a{
    background: black;
    padding:3px;
    text-decoration: none;
    color: white;
    border-radius: 3px;
    font-size: 0.8em;
    text-align:center;
    margin:0 auto;
  }

  .article-list-text {
    text-decoration: none;
    color: black;
    padding:20px;
  }
  .article-img-wrapper{
    width:100%;
    height:100%;
    object-fit:cover;
    position:absolute;
  }
